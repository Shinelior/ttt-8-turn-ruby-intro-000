#!/usr/bin/env 
require_relative"../lib/turn.rb

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac toe!"
display_board(board)
turn(board)
def turn(board)
  
  puts "please enter 1-9 : "
  
  r=gets.chomp
  input_to_index(r)
  n=valid_move?(board, index)
  if n == true
     puts "please enter X or O"
     t=gets.chomp
     move(board, index,t)  
     display_board(board) 
     turn(board)
    
  else
    until n==true
         puts "this place is occupied"
         turn(board)
     end 
  end
end     

  
  
      
 
 
 